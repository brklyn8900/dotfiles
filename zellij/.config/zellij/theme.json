{
  "metadata": {
    "name": "minimal-pastel",
    "description": "A minimal dark theme with subtle pastel accents and low-contrast borders",
    "author": "Ron",
    "version": "1.0.0",
    "created": "2025-09-30",
    "tags": ["dark", "minimal", "pastel", "subtle"]
  },
  "palette": {
    "dark_bg": {
      "value": "#2d2d37",
      "description": "Primary dark background for status bars and UI"
    },
    "dark_bg_lighter": {
      "value": "#323240",
      "description": "Slightly lighter dark background"
    },
    "dark_bg_selected": {
      "value": "#414150",
      "description": "Background for selected items"
    },
    "dark_bg_highlight": {
      "value": "#4b4b5f",
      "description": "Highlighted background (selected ribbons)"
    },
    "border_subtle": {
      "value": "#2d2d37",
      "description": "Nearly invisible border (matches dark_bg)"
    },
    "border_selected": {
      "value": "#8c8ca0",
      "description": "Border for selected frames"
    },
    "border_highlight": {
      "value": "#b4a0be",
      "description": "Border for highlighted frames (pastel purple)"
    },
    "text_dim": {
      "value": "#a0a0aa",
      "description": "Dimmed text color"
    },
    "text_normal": {
      "value": "#b4b4be",
      "description": "Normal text color"
    },
    "text_bright": {
      "value": "#dcdceb",
      "description": "Bright text for selected items"
    },
    "accent_success": {
      "value": "#8cb4a0",
      "description": "Pastel mint green for success states"
    },
    "accent_error": {
      "value": "#c88c96",
      "description": "Pastel coral for error states"
    }
  },
  "components": {
    "text_unselected": {
      "base": "text_normal",
      "background": "dark_bg",
      "emphasis_0": "text_dim",
      "emphasis_1": "#8c8c96",
      "emphasis_2": "#78788c",
      "emphasis_3": "#64646e",
      "description": "Unselected text in status bars"
    },
    "text_selected": {
      "base": "text_bright",
      "background": "dark_bg_selected",
      "emphasis_0": "#c8c8dc",
      "emphasis_1": "#bebed2",
      "emphasis_2": "#b4b4c8",
      "emphasis_3": "#aaaabc",
      "description": "Selected text in status bars"
    },
    "ribbon_unselected": {
      "base": "text_dim",
      "background": "dark_bg",
      "emphasis_0": "#8c8c96",
      "emphasis_1": "#78788c",
      "emphasis_2": "#64646e",
      "emphasis_3": "#50505a",
      "description": "Unselected tabs/sections in ribbon"
    },
    "ribbon_selected": {
      "base": "#d2d2e1",
      "background": "dark_bg_highlight",
      "emphasis_0": "#bebed2",
      "emphasis_1": "#b4b4c8",
      "emphasis_2": "#aaaabc",
      "emphasis_3": "#a0a0b4",
      "description": "Selected tabs/sections in ribbon"
    },
    "table_title": {
      "base": "text_normal",
      "background": "dark_bg_lighter",
      "emphasis_0": "text_dim",
      "emphasis_1": "#8c8c96",
      "emphasis_2": "#78788c",
      "emphasis_3": "#64646e",
      "description": "Table header/title styling"
    },
    "table_cell_unselected": {
      "base": "text_dim",
      "background": "dark_bg",
      "emphasis_0": "#8c8c96",
      "emphasis_1": "#82828c",
      "emphasis_2": "#787882",
      "emphasis_3": "#6e6e78",
      "description": "Unselected table cells"
    },
    "table_cell_selected": {
      "base": "text_bright",
      "background": "dark_bg_selected",
      "emphasis_0": "#c8c8dc",
      "emphasis_1": "#bebed2",
      "emphasis_2": "#b4b4c8",
      "emphasis_3": "#aaaabc",
      "description": "Selected table cells"
    },
    "list_unselected": {
      "base": "text_dim",
      "background": "dark_bg",
      "emphasis_0": "#8c8c96",
      "emphasis_1": "#82828c",
      "emphasis_2": "#787882",
      "emphasis_3": "#6e6e78",
      "description": "Unselected list items"
    },
    "list_selected": {
      "base": "text_bright",
      "background": "#46465a",
      "emphasis_0": "#d2d8dc",
      "emphasis_1": "#bebed2",
      "emphasis_2": "#b4b4c8",
      "emphasis_3": "#aaaabc",
      "description": "Selected list items"
    },
    "frame_unselected": {
      "base": "border_subtle",
      "background": "dark_bg",
      "emphasis_0": "#464650",
      "emphasis_1": "#3c3c46",
      "emphasis_2": "#32323c",
      "emphasis_3": "#282832",
      "description": "Borders around unselected panes (very subtle)"
    },
    "frame_selected": {
      "base": "border_selected",
      "background": "#373746",
      "emphasis_0": "#828296",
      "emphasis_1": "#78788c",
      "emphasis_2": "#6e6e82",
      "emphasis_3": "#646478",
      "description": "Borders around selected panes"
    },
    "frame_highlight": {
      "base": "border_highlight",
      "background": "#3c3746",
      "emphasis_0": "#aa96b4",
      "emphasis_1": "#a08caa",
      "emphasis_2": "#9682a0",
      "emphasis_3": "#8c7896",
      "description": "Highlighted frame borders (pastel purple accent)"
    },
    "exit_code_success": {
      "base": "accent_success",
      "background": "dark_bg",
      "emphasis_0": "#82aa96",
      "emphasis_1": "#78a08c",
      "emphasis_2": "#6e9682",
      "emphasis_3": "#648c78",
      "description": "Success exit code indicator"
    },
    "exit_code_error": {
      "base": "accent_error",
      "background": "dark_bg",
      "emphasis_0": "#be828c",
      "emphasis_1": "#b47882",
      "emphasis_2": "#aa6e78",
      "emphasis_3": "#a0646e",
      "description": "Error exit code indicator"
    }
  },
  "multiplayer_user_colors": {
    "description": "Colors for multiplayer users (10 users, 3 RGB values each)",
    "colors": [
      {"name": "user1", "rgb": [180, 160, 190]},
      {"name": "user2", "rgb": [160, 180, 200]},
      {"name": "user3", "rgb": [200, 170, 160]},
      {"name": "user4", "rgb": [170, 190, 170]},
      {"name": "user5", "rgb": [160, 170, 160]},
      {"name": "user6", "rgb": [190, 180, 160]},
      {"name": "user7", "rgb": [200, 180, 160]},
      {"name": "user8", "rgb": [170, 160, 190]},
      {"name": "user9", "rgb": [160, 190, 180]},
      {"name": "user10", "rgb": [190, 170, 180]}
    ]
  }
}
